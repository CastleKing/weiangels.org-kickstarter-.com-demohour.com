<?xml version="1.0" encoding="utf-8" ?>
<templete>
	<discription>项目更新报告</discription>
	
    <!--邮件中显示的发送人地址，非实际地址-->
    <sendEmailAddress>no-reply@weiangels.org</sendEmailAddress>
	
    <!--邮件中显示的发送人名称，非实际名称-->
    <sendUserName>微天使</sendUserName>
	
	<!--邮件是否为Html格式-->
	<isBodyHtml>true</isBodyHtml>
	
	<!--邮件主题-->
    <subject>
        <![CDATA[
        项目更新${updateNumber}:${projectName}
        ]]>
    </subject>
	
	<!--邮件内容-->
    <content>
        <![CDATA[
		<p>
			项目更新${updateNumber}:${updateSubjet}
		</p>
		<p>
			创建者：${nickName}<br />
		</p>
		<p>
			${updateContent}<br />
		</p>
		<p>
			<a href="http://www.weiangels.org/project/projectDetail.aspx?projectId=${projectId}&tab=update">赶快参与评论</a>
		</p>
        ]]>		
    </content>
    
    <!--模板附件，填写附件的物理地址，每个附件对应一个attachment节点-->
