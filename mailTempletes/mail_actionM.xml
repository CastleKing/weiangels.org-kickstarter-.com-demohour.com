<?xml version="1.0" encoding="utf-8" ?>
<templete>
    <!--邮件中显示的发送人地址，非实际地址-->
    <sendEmailAddress>no-reply@weiangels.org</sendEmailAddress>
	
    <!--邮件中显示的发送人名称，非实际名称-->
    <sendUserName>微天使</sendUserName>
	
	<!--邮件是否为Html格式-->
	<isBodyHtml>true</isBodyHtml>
	
	<!--邮件主题-->
    <subject>
        <![CDATA[
        变更${projectName}承诺
        ]]>
    </subject>
	
	<!--邮件内容-->
    <content>
        <![CDATA[
		<p>
		${projectName}
		</p>
		<p>
		创建者${prjUserName}
		</p>
		<p>
		您所做的项目承诺变更操作如下：<p/>
		<p>
		变更前：承诺金额为￥${oldAmount}元。选择的奖励是：${oldRewardInfo} </p>
		<p>
		变更后：承诺金额为￥${newAmount}元。选择的奖励是：${newRewardInfo} </p>		
        ]]>
    </content>
    
    <!--模板附件，填写附件的物理地址，每个附件对应一个attachment节点-->
