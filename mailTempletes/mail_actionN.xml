<?xml version="1.0" encoding="utf-8" ?>
<templete>

	<discription>忘记密码</discription>
	
    <!--邮件中显示的发送人地址，非实际地址-->
    <sendEmailAddress>no-reply@weiangels.org</sendEmailAddress>
	
    <!--邮件中显示的发送人名称，非实际名称-->
    <sendUserName>微天使</sendUserName>
	
	<!--邮件是否为Html格式-->
	<isBodyHtml>true</isBodyHtml>
	
	<!--邮件主题-->
    <subject>
        <![CDATA[
        重新设置您的密码
        ]]>
    </subject>
	
	<!--邮件内容-->
    <content>
        <![CDATA[
		Hi ${nickName}<br />
		您是不是忘记了登录密码？<a href="http://localhost/weiangels/account/resetpassword.aspx?key=${resetId}">请点击这重新设置</a><br />
		如果您没有这种变化的要求，请直接放弃此邮件。
        ]]>
    </content>
    
    <!--模板附件，填写附件的物理地址，每个附件对应一个attachment节点-->
	<!--
